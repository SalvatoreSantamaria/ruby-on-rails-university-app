<div class='row'>
    <div class='col s12 center-align'>
        <h3>Course Listings</h3>
    </div>
</div>

<div class="row">
    <% @courses.each do |course| %>
        <div class="col s6 m6">
            <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><%=course.short_name%></span>
                <p><%=course.description%></p>
            </div>
            <div class="card-action">
                <%# #if logged_in and the current user already is enrolled in the course %>
                <% if logged_in? && !(current_user.courses.include?(course))%> 
                <%# have to specify method post (not using a form for helper) %>
                    <%= link_to "Enroll", course_enroll_path(course_id: course.id), method: :post %> <%# passing in course_id param (one of the keys in the params hash) and the value of the id of the course%>
                <% end %>
                    <a href="#">Info</a>
            </div>
            </div>
        </div>
    <%end%>
</div>